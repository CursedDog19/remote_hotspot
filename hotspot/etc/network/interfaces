auto lo
iface lo inet loopback

# Wired Ethernet
allow-hotplug eth0
iface eth0 inet static
address 192.168.0.91
netmask 255.255.255.0
dns-nameservers 8.8.8.8 1.1.1.1

# Wireless adapter #1
allow-hotplug wlan0
iface wlan0 inet static
address 192.168.0.1
netmask 255.255.255.0
dns-nameservers 8.8.8.8 1.1.1.1
